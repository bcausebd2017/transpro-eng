                <div class="common-table settlement_style2" style="overflow-x:auto;">
					<table>
						<tr>
							<td class="settlement_td" rowspan="5">
								<div class="tbl_row padding3">
									<i class="fa fa fa-chevron-circle-right"></i> Postal Address
								</div>
							</td>
							<td class="settlement_td">
