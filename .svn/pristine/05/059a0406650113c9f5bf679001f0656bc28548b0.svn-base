                            <select id="selectLanguage" class="form-control"
                                    data-ng-model="selectField" ng-change="fieldChanged(selectField)"
                                    ng-options="t.ID as t.Name for t in ::translationFields">
                                <option value="" selected="selected">▼--------------</option>
                            </select>
                        </p>
                    </div>
                </div>


